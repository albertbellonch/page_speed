#!/usr/bin/env ruby
# encoding: utf-8

$:.unshift(File.dirname(__FILE__) + '/../lib')
require 'page_speed'

case ARGV.length
  when 1
    arg1 = ARGV[0]
    case arg1
      when "-v", "--version"
        PageSpeed::version
      when "-h", "--help"
        PageSpeed::help
      else
        PageSpeed::analyze(arg1)
    end
  else
    puts "Please check your syntax.\n"
    PageSpeed::help
end
